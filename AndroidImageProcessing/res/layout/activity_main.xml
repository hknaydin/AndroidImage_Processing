<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/layoutmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_pick_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="buttonClicked"
            android:text="Pick Image" />
    </LinearLayout>

    <ImageView
        android:id="@+id/effect_main"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/effect_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_boost_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_boost_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_boost_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:padding="2dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/effect_color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_color_depth_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_invert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_mean_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_round_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/effect_saturation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_sepia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_sepia_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_sheding_cyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_sepia_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_sheding_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/effect_sheding_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_smooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/effect_tint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:src="@drawable/ic_launcher" />
             <ImageView
            android:id="@+id/effect_watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClicked"
            android:src="@drawable/ic_launcher" />
                <ImageView
        android:id="@+id/effect_color_depth_64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />
                 <ImageView
        android:id="@+id/effect_emboss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

    <ImageView
        android:id="@+id/effect_engrave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/effect_flea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/effect_gamma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/effect_gaussian_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/effect_grayscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/effect_contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />


      </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    <ImageView
        android:id="@+id/effect_hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher" />
       <ImageView
        android:id="@+id/effect_binary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher"
         />
        <ImageView
        android:id="@+id/btnMedian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher" />
       <ImageView
        android:id="@+id/btnLaplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"
        android:src="@drawable/ic_launcher"
         />
       
      </LinearLayout>
</LinearLayout>
